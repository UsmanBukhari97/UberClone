<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:context=".PassengerActivity">


    </fragment>

    <Button
        android:id="@+id/btnRequestCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request a Car" />

    <Button
        android:id="@+id/btnBeepBeep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beep Beep!" />

    <Button
        android:id="@+id/btnLogOutFromPassengerActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out from app" />




</LinearLayout>